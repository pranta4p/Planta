<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Planta - Marketplace</title>
    <link rel="stylesheet" href="/css/marketPlace.css">
</head>
<body>
    <div class="background-image"></div>
    
    <!-- Header -->
     <!--/* copied from home nav */-->
    <header class="header">
        <div class="containerNav">
            <nav class="nav">
                <a href="#" class="logo">
                    <svg class="logo-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M11 20A7 7 0 0 1 9.8 6.1C15.5 5 17 4.48 19 2c1 2 2 4.18 2 8 0 5.5-4.78 10-10 10Z"/>
                        <path d="M2 21c0-3 1.85-5.36 5.08-6C9.5 14.52 12 13 13 12"/>
                    </svg>
                    <span class="logo-text">Planta</span>
                </a>
                <div class="nav-links">
                    
                    <a href="/home">Home</a>
                    <a href="/marketPlace" style="font-weight: bold; color: #16a34a;">Marketplace</a>
                    <a href="/tutorial">Tutorials</a>
                    <a href="/weather">Weather</a>
                    <a href="/blog">Blog</a>
                    <a href="/agridoc">AgriDoctor</a>
                </div>
                <div class="nav-buttons">
                    <a href="/logIn" class="btn btn-outline" id = "logIn">Login</a>
                    <a href="/signUp" class="btn btn-primary" id = "signUp">Sign Up</a>
                </div>
            </nav>
        </div>
    </header>
    <!--/*// copied from home nav */-->

    <!-- AI button -->
     <button class="AIchat-btn" onclick="window.location.href = '/agridoc'">
        <svg viewBox="0 0 24 24">
            <path d="M21.05 11.5a9.5 9.5 0 0 1-14.37 8.17L3 21l1.36-4.13a9.5 9.5 0 1 1 16.69-5.37z"/>
        </svg>
    </button>

    <!-- Main Content -->
    <main class="main-content">
        <div class="containerNav">
            <h1 class="page-title">Agricultural Marketplace</h1>
            
            <!-- Filters -->
            <div class="filters">
                <h2>Filter Products</h2>
                <div class="filter-grid">
                    <div class="filter-group">
                        <label for="search" class="filter-label">Search by Name or Description</label>
                        <input type="text" id="search" class="input" placeholder="Search products...">
                    </div>
                    <div class="filter-group">
                        <label for="location" class="filter-label">Filter by Location</label>
                        <select id="location" class="select">
                            <option value="All">All Locations</option>
                            <option value="Rural County">Rural County</option>
                            <option value="Apple Valley">Apple Valley</option>
                            <option value="Green Fields">Green Fields</option>
                        </select>
                    </div>
                    <div class="filter-group">
                        <label for="type" class="filter-label">Filter by Type</label>
                        <select id="type" class="select">
                            <option value="All">All Types</option>
                            <option value="Vegetables">Vegetables</option>
                            <option value="Fruits">Fruits</option>
                            <option value="Supplies">Supplies</option>
                        </select>
                    </div>
                </div>
            </div>
            
            <!-- Products Grid -->
            <div class="products-grid" id="products-grid">
                <!-- Products will be rendered here by JavaScript -->
            </div>

            <div class="add-section">
                <a href="/marketPlaceProductAdd" class="add-button">Add Product</a>
            </div>
            
            <!-- No Results -->
            <div class="no-results" id="no-results" style="display: none;">
                <p>No products match your search criteria.</p>
                <button class="clear-filters-btn" onclick="clearFilters()">Clear Filters</button>
            </div>
        </div>
    </main>
    <script>
  const products = <%- JSON.stringify(products) %> ;
     </script>
    <script src="/js/marketPlace.js"></script>
    <%- include("layout/footer") %>
</body>
</html>
