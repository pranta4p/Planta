<!DOCTYPE html> 
<head>
    <meta charset="UTF-8">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel = "stylesheet" href = "/css/home.css">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <nav class="nav">
                <a class="logo">
                    <svg class="logo-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">


                        <!-- custom design path -->
                        <path d="M11 20A7 7 0 0 1 9.8 6.1C15.5 5 17 4.48 19 2c1 2 2 4.18 2 8 0 5.5-4.78 10-10 10Z"/>
                        <path d="M2 21c0-3 1.85-5.36 5.08-6C9.5 14.52 12 13 13 12"/>



                    </svg>
                    <span class="logo-text">Planta</span>
                </a>
                <div class="nav-links">
                    <!-- href thakle mouse pointer hoi -->
                    <a href="/home" style="font-weight: bold; color: #16a34a;">Home</a>
                    <a href="/marketPlace">Marketplace</a>
                    <a href="/tutorial">Tutorials</a>
                    <a href="/weather">Weather</a>
                    <a href="/blog">Blog</a>
                    <a href="/agridoc">AgriDoctor</a>
                </div>
                <div class="nav-buttons">
                    <% if(f == 0){ %>
                        <a href="/logIn" class="btn btn-outline" id = "logIn">Login</a>
                        <a href="/signUp" class="btn btn-primary" id = "signUp">Sign Up</a>
                    <% }else{ %>
                        <a href="/logOut" class="btn btn-outline" id = "logIn">Log Out</a>
                    <% } %>
                </div>
            </nav>
        </div>
    </header>

    <!-- AI button -->
     <button class="AIchat-btn" onclick="window.location.href = '/agridoc'">
        <svg viewBox="0 0 24 24">
            <path d="M21.05 11.5a9.5 9.5 0 0 1-14.37 8.17L3 21l1.36-4.13a9.5 9.5 0 1 1 16.69-5.37z"/>
        </svg>
    </button>

    <!-- Hero/top Section -->
    <section class="hero">
        <div class="hero-bg"></div>
        <div class="container">
            <div class="hero-content">
                <span class="badge">ðŸŒ± Empowering Farmers with Technology</span>
                <h1 class="hero-title">
                    Welcome to
                    <span class="text-green">Planta</span>
                </h1>
                <p class="hero-description">
                    Your comprehensive agricultural platform combining marketplace, disease detection, 
                    weather updates, and expert guidance - all designed to help farmers thrive in the digital age.
                </p>
                <div class="hero-buttons">
                    <a href="/tutorial" class="btn btn-primary btn-lg">Start Farming Smarter</a>
                    <a href="/marketPlace" class="btn btn-outline btn-lg">Explore Marketplace</a>

                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats">
        <div class="stats-bg"></div>
        <div class="container">
            <div class="stats-grid">
                <!-- changes to -->
                <div>
                    <div class="stat-number">10,000+</div>
                    <div class="stat-label">Farmers Connected</div>
                </div>
                <div>
                    <div class="stat-number">50,000+</div>
                    <div class="stat-label">Products Listed</div>
                </div>
                <div>
                    <div class="stat-number">95%</div>
                    <div class="stat-label">Disease Detection Accuracy</div>
                </div>
                <div>
                    <div class="stat-number">24/7</div>
                    <div class="stat-label">Support Available</div>
                </div>
                <!-- changes -->
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="features">
        <div class="features-bg"></div>
        <div class="container features-content">
            <div class="section-header">
                <h2 class="section-title">Everything You Need to Succeed</h2>
                <p class="section-description">
                    Planta provides comprehensive tools and services to help farmers increase productivity, 
                    reduce costs, and make informed decisions.
                </p>
            </div>
            
            <!-- changes to svg viewBox change -->
            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-store icon"></i>
                    </div>
                    <h3 class="feature-title">Farmer Dashboard</h3>
                    <p class="feature-description">Manage your profile, track sales history, and add new products to sell</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-shopping-cart icon"></i>
                    </div>
                    <h3 class="feature-title">Digital Marketplace</h3>
                    <p class="feature-description">Browse and buy agricultural products with advanced filtering and secure payments</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-microscope icon"></i>
                    </div>
                    <h3 class="feature-title">Disease Detection</h3>
                    <p class="feature-description">Upload crop images for AI-powered disease detection and treatment recommendations</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-comment icon"></i>
                    </div>
                    <h3 class="feature-title">Expert Chat Support</h3>
                    <p class="feature-description">Get instant answers to your agricultural questions from our AI assistant</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-cloud-sun icon"></i>
                    </div>
                    <h3 class="feature-title">Weather Updates</h3>
                    <p class="feature-description">Stay informed with current and upcoming weather forecasts for your location</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-chalkboard-teacher icon"></i>
                    </div>
                    <h3 class="feature-title">Learning Tutorials</h3>
                    <p class="feature-description">Access comprehensive tutorials on modern farming techniques and best practices</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-pen-nib icon"></i>
                    </div>
                    <h3 class="feature-title">Farming Blog</h3>
                    <p class="feature-description">Share your farming journey, success stories, and learnings with the community</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-stethoscope icon"></i>
                    </div>
                    <h3 class="feature-title">AgriDoctor</h3>
                    <p class="feature-description">AI-powered crop disease detection with personalized treatment recommendations</p>
                </div>
            </div>
            <!-- changes -->
        </div>
    </section>

    <!-- Call to Action Section -->
    <section class="cta">
        <div class="cta-bg"></div>
        <div class="container">
            <div class="cta-content">
                <h2 class="cta-title">Ready to Transform Your Farming?</h2>
                <p class="cta-description">
                    Join thousands of farmers who are already using Planta to increase their productivity and profits.
                </p>
                <div class="cta-buttons">
                    <a href="/signUp" class="btn btn-white btn-lg" id = "CreateSignUp">Create Your Account</a>
                    <a href="#" class="btn btn-outline-white btn-lg" id = "watchDemo">Watch Demo</a>
                </div>
            </div>
        </div>
    </section>

    <%- include("layout/footer") %>
</body>
</html>
